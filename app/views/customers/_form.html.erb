    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :suffix, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :suffix, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
