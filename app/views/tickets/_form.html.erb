<%= form_for @ticket, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :customer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :customer_id, Customer.all, :id, :name, :prompt => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :closed, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :closed, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :manufacturer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :manufacturer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :model, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :serial_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :serial_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :problem, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :problem, :class => 'text_area', :style => "width:50%;height:200px;" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :solution, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :solution, :class => 'text_area', :style => "width:50%;height:200px;" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area', :style => "width:50%;height:200px;" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tickets_path, :class => 'btn' %>
  </div>
<% end %>
