<table class="table table-striped">
  <thead>
    <tr>
      <%- if show_customer == true -%>
        <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <%- end -%>
      <th><%= model_class.human_attribute_name(:closed) %></th>
      <th><%= model_class.human_attribute_name(:manufacturer) %></th>
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% tickets.each do |ticket| %>
      <tr data-url="<%= ticket_path(ticket) %>">
        <%- if show_customer == true -%>
          <td><%= ticket.customer.try(:name) %></td>
        <%- end -%>
        <td><%= ticket.closed %></td>
        <td><%= ticket.manufacturer %></td>
        <td><%= ticket.model %></td>
        <td><%=l ticket.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ticket_path(ticket), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ticket_path(ticket),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
