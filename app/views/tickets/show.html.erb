<%- model_class = @ticket.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= link_to(@ticket.customer.name, customer_path(@ticket.customer)) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:closed) %>:</strong></dt>
  <dd><%= @ticket.closed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @ticket.manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @ticket.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serial_number) %>:</strong></dt>
  <dd><%= @ticket.serial_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:problem) %>:</strong></dt>
  <dd><%= @ticket.problem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:solution) %>:</strong></dt>
  <dd><%= @ticket.solution %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @ticket.notes %></dd>
</dl>
<div style="clear:both;">
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tickets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ticket_path(@ticket), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ticket_path(@ticket),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
